{
  "name": "vfile-reporter",
  "version": "5.0.0",
  "description": "Stylish reporter for virtual files",
  "license": "MIT",
  "keywords": [
    "vfile",
    "formatter",
    "reporter",
    "lint",
    "format",
    "message",
    "warning",
    "error"
  ],
  "repository": "vfile/vfile-reporter",
  "bugs": "https://github.com/vfile/vfile-reporter/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "files": [
    "index.js"
  ],
  "dependencies": {
    "repeat-string": "^1.5.0",
    "string-width": "^2.0.0",
    "supports-color": "^5.4.0",
    "unist-util-stringify-position": "^1.0.0",
    "vfile-statistics": "^1.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.6.1",
    "babelify": "^8.0.0",
    "browserify": "^16.0.0",
    "esmangle": "^1.0.1",
    "nyc": "^11.0.0",
    "prettier": "^1.12.1",
    "remark-cli": "^5.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "strip-ansi": "^4.0.0",
    "tape": "^4.0.0",
    "vfile": "^2.0.0",
    "xo": "^0.20.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier --write '**/*.js' && xo --fix",
    "build-bundle": "browserify index.js -o vfile-reporter.js --bare -s vfileReporter -g [ babelify --presets [ \"babel-preset-env\" ] ]",
    "build-mangle": "esmangle vfile-reporter.js > vfile-reporter.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "no-var": "off",
      "prefer-arrow-callback": "off",
      "object-shorthand": "off",
      "complexity": "off"
    },
    "ignores": [
      "vfile-reporter.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
